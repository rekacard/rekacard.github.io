<div class="container" style="margin-top: 30px;">
    <div ng-if='ctrl.user'>
        <div id="header">
            <center>
                <h1>Analytics - Details on {{ctrl.name}}</h1>
            </center>
            <br>
            <br>
        </div>

        <div class="col-xs-2">
            <!-- required for floating -->
            <!-- Nav tabs -->
            <ul class="nav nav-tabs tabs-left">
                <li>
                    <a ui-sref="analytics_userprofile">Basic Profile</a>
                </li>
                <li>
                    <a ui-sref="analytics_userskills">Skills & Interests</a>
                </li>
                <li>
                    <a ui-sref="analytics_userexperience">Work Experience / Education</a>
                </li>
                <li class="active">
                    <a ui-sref="analytics_userbadges">Badges</a>
                </li>
                <li>
                    <a ui-sref="analytics_userupcoming">Event Upcoming</a>
                </li>
                <li>
                    <a ui-sref="analytics_userhistory">Event History</a>
                </li>
                <li>
                    <a ui-sref="analytics_useremergency">Emergency Contact</a>
                </li>
            </ul>
        </div>

        <div class="col-xs-9">
            <!-- Tab panes -->
            <div class="tab-content">
                <h3 style="color:orange;">Badges Earned</h3>
                <div class="badge" style="padding: 3em">
                    <div ng-repeat="badges in ctrl.badge"> 
                        <figure style="width: 33%; float: left; margin: 0; text-align: center; padding: 0;">
                            <img src="{{badges.path}}" class="ecowarrior img-circle img-thumbnail"
                                alt="{{badges.description}}" width="60%">
                            <figcaption style="padding: 10px; font-size:20px;"> {{badges.description}} </figcaption>
                        </figure>
                    </div> 
                </div>

                <hr>

                <div>
                    <br>
                    <h3 style="color:orange;">Badges in Progress</h3>
                    <h4>Silver Friends</h4>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar" style="width:50%; padding: 10px; font-size:20px;">
                            50 hrs volunteered
                        </div>
                        <div class="progress-bar progress-bar-warning" role="progressbar" style="width:50%; padding: 10px; font-size:20px;">
                            50 hrs more
                        </div>
                    </div>
                    <h4>Super Planner</h4>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar" style="width:80%; padding: 10px;font-size:20px">
                            80 hrs volunteered
                        </div>
                        <div class="progress-bar progress-bar-warning" role="progressbar" style="width:20%; padding: 10px; font-size:20px">
                            20 hrs more
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>